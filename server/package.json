{
  "name": "server",
  "version": "1.0.0",
  "description": "This is a simple project that create blogs and allows you to manipulate them.",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "build": "npx tsc",
    "start": "npx tsx server",
    "dev": "npx nodemon",
    "pre-migration": "npx tsc app/config/index.ts",
    "make-migration": "npx sequelize-cli model:generate --name Blog --attributes title:string,slug:string,content:string,image:string,published_at:date,deleted_at:date --models-path app/models --migrations-path app/migrations",
    "migrate": "npx sequelize-cli db:migrate --config app/config/index.js --migrations-path app/migrations",
    "migrate-undo": "npx sequelize-cli db:migrate:undo --config app/config/index.js --migrations-path app/migrations",
    "make-seed": "npx sequelize-cli seed:generate --name blog-seed --seeders-path app/seeders",
    "seed": "npx sequelize-cli db:seed:all --config app/config/index.js --seeders-path app/seeders",
    "seed:undo": "npx sequelize-cli db:seed:undo --config app/config/index.js --seeders-path app/seeders",
    "db-init": "npm run pre-migration && npm run migrate && npm run seed",
    "undo-all": "npm run seed:undo && npm run migrate-undo"
  },
  "keywords": [],
  "author": "Posi Adeyemi",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "sequelize-cli": "^6.6.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
